@model List<OrderViewModel>
@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">

        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tarih / Saat</th>
                            <th>Order Number</th>
                            <th>Garson ID</th>
                            <th>Masa ID</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CreatedDate</td>
                                <td>@item.OrderNumber</td>
                                <td>@item.UserId</td>
                                <td>@item.TableId</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Index" asp-controller="OrderDetail" asp-area="Administrator" asp-route-orderId="@item.OrderId">Sipariş Detayları</a>
                                </td>
                            </tr>
                        }

                </table>

            </div>
        </div>
    </div>
</div>

