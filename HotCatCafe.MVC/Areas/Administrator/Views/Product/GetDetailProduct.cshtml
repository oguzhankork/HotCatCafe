@model List<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}
<seciton class="mt-2">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Son Eklenen Ürünler</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    @if (Model.Count > 0)
                    {
                        @foreach (var p in Model)
                        {
                            <div class="col-md-3">
                                <div class="card">                                    
                                        <img src="~/images/productImages/@p.ImagePath" alt="Ürün Görseli" class="product-image" />
                                   <div class="card-body">
                                        <h5 class="product-name">@p.ProductName</h5>
                                        <h5 class="product-price">@p.UnitPrice ₺</h5>
                                        <h6 class="product-stock">Stok: @p.UnitInStock ADET</h6>
                                        <a asp-action="UpdateProduct" asp-area="Administrator" asp-route-id="@p.ProductId" class="btn btn-outline-primary mt-2">Güncelle</a>
                                   </div>                                   
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>Herhangi bir ürün eklenmemiş</h1>
                    }
                </div>
            </div>
        </div>
    </div>    
</seciton>



