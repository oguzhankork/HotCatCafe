@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tableId = ViewBag.TableId;
}

<div class="container-fluid">
    <div class="row">
       
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-start">
                <!-- Kategori Tablosu -->
                <div class="flex-grow-1 me-3">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th class="text-center">Kategori ID</th>
                                <th class="text-center">Kategori Adı</th>
                                <th class="text-center">Açıklama</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">@item.Id</td>
                                    <td class="text-center">@item.CategoryName</td>
                                    <td class="text-center">@item.Description</td>
                                    <td class="text-center">
                                        <a asp-action="Index" asp-controller="SubCategory" asp-route-id="@item.Id" asp-route-tableId="@tableId" class="btn btn-outline-success btn-sm">Alt Kategori</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Ödeme Yap Butonu -->
                <div class="d-flex align-items-start ms-3">
                    <a asp-action="IndexTest" asp-controller="Table" asp-route-tableId="@tableId" class="btn btn-success btn-lg">
                        Ödeme Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
